@page "/Settings/{id}"
@model MyApp.Namespace.SettingsModel
@{
    var id = RouteData.Values["id"];
}
  <!DOCTYPE html>
<html lang="en">
<head>
	<title>Sign In</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/mainSP.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
			
                <form method="POST" class="login100-form validate-form">
                    <span class="login100-form-title">
						Change Min and Max number of tasks
					</span>
                    <div class="wrap-input101 validate-input">
						<input class="input100" type="text" name="minV" placeholder="@LearnCountries.Pages.NumberOfTasks.minValue">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input101 validate-input">
						<input class="input100" type="text" name="maxV" placeholder="@LearnCountries.Pages.NumberOfTasks.maxValue">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</span>
                    </div>
                    <div class="container-login101-form-btn">
                        <button class="login100-form-btn">
                            Change 
                        </button>
                    </div>
                </form>
                 
                <div class="text-center ">
                    <a class="txt2" href="@Url.Page("AdminPage",new {id = id})">
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                        Back to your page
                    </a>
                </div>
			</div>
		</div>
	</div>
	
	

	
<!--===============================================================================================-->	
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
<!--===============================================================================================-->
	<script src="~/js/main.js"></script>

</body>
</html>