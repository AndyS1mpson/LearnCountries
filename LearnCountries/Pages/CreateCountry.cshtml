@page "/CreateCountry/{id}"
@model MyApp.Namespace.CreateCountryModel
@{
	var id = RouteData.Values["id"];

}
  <!DOCTYPE html>
<html lang="en">
<head>
	<title>Sign In</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/mainSP.css">
<!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
			
				<form method="POST" class="login100-form validate-form">
					<span class="login100-form-title">
						Create new Country
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Country name is required" >
						<input class="input100" type="text" name="countryName" placeholder="Country Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-map" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Capital is required">
						<input class="input100" type="text" name="capitalName" placeholder="Capital Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-subway" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Path is required">
						<input class="input100" type="text" name="path" placeholder="File Path">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-train" aria-hidden="true"></i>
						</span>
                    </div>
                    
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Create
						</button>
					</div>
                </form>
					<div class="text-center ">
                    <a class="txt2" href="@Url.Page("AdminPage",new {id = id})">
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                        Back to your page
                    </a>
                </div>
            </div>   
		</div>
    </div>           
</body>