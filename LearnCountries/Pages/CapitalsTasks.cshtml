@page "{id}/{letters}/{num}/{curNum}"
@model MyApp.Namespace.CapitalsTasksModel
@{
    var id = RouteData.Values["id"];
    var letters = RouteData.Values["letters"];
    var num = RouteData.Values["num"];
    var curNum = RouteData.Values["curNum"];
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Learn Countries</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/images/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/mainTP.css">
<!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
    <div class="main-container">
        <div class="projName">Learn Countries</div>
        <div class="score-container">
            <b class="Score">Score</b>
            <ul>
            <ol class="table">
                <div class="top-text">Top-3</div>
                <li> @Model.topUsers[0].Name : @Model.topUsers[0].Score</li>
                <li> @Model.topUsers[1].Name : @Model.topUsers[1].Score</li>
                <li> @Model.topUsers[2].Name : @Model.topUsers[2].Score</li>
                <div class="txt-3">...</div>
            </ol>
                <p class="you-row">You : </p>
                <label class="you-place">Position: @Model.userPosition</label>
                <label class="you-score">Score : @Model.user.Score</label>
            </ul>
        </div>
        <div class="task-container">
            <div class="task-number">Task : @Model.numOfCurTask/@Model.num</div>
            <div class="text">Choose the capital of this country :</div>
            <label class="capitalName">@Model.enterCountry.CountryName</label>
            <form action="" method="post" class="choice">
                <label><input type="radio" name="answer" value="1">@Model.countryArray[0].CapitalName</label><br>
                <label><input type="radio" name="answer" value="2">@Model.countryArray[1].CapitalName</label><br>
                <label><input type="radio" name="answer" value="3">@Model.countryArray[2].CapitalName</label><br>
                <label><input type="radio" name="answer" value="4">@Model.countryArray[3].CapitalName</label><br>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Go
                    </button>
                </form>
        </div>
    </div>
    </div>
</body>
</html>